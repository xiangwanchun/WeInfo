/**index.wxss**/
.goods-list-item {
    position: relative;
    display: block;
    width: 100%;
    margin-bottom: 10rpx;
    background-color: white;
}

.goods-img {
    display: block;
    width: 100%;
    height: 352rpx;
    overflow: hidden;
}

.goods-name {
    display: block;
    padding: 0 20rpx;
    font-size: 32rpx;
    color: #333;
    max-height: 96rpx;
    overflow: hidden;
    line-height: 48rpx;
}

.detail {
    display: block;
    position: relative;
    width: 100%;
    height: 116rpx;
}

.group-icon {
    width: 34rpx;
    height: 34rpx;
    overflow: hidden;
    display: inline-block;
    position: relative;
    margin: 41rpx 15rpx 0 20rpx;
}

.customer-num {
    display: inline-block;
    height: 116rpx;
    line-height: 116rpx;
    font-size: 24rpx;
    position: relative;
}

.group-price {
    display: inline-block;
    height: 116rpx;
    line-height: 116rpx;
    font-size: 38rpx;
    font-weight: bold;
    position: relative;
    margin-left: 20rpx;
    color: #df2127;
}

.group-price-icon {
    font-size: 22rpx;
}

.normal-price {
    text-decoration: line-through;
    font-size: 24rpx;
    margin-left: 20rpx;
}

.open-group-button {
    display: block;
    position: absolute;
    right: 20rpx;
    color: white;
    background-color: #ee2e3a;
    width: 204rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 28rpx;
    text-align: center;
    border-radius: 8rpx;
    top: 50%;
    transform: translateY(-50%);
}

.load-more-bar {
    border-width: 0 !important;
    font-size: 24rpx;
    color: #555 !important;
}

.goods-list-container {
    width: 100%;
}
